block variables

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1, maximum-scale=5")

    base(href="/")

    title=meta.data.title

    meta(name="description" content=meta.data.description)

    <link rel="canonical" href="https://rouxmathias.fr">

    link(rel="apple-touch-icon" href="/apple-touch.png")
    link(rel="icon" sizes="any" href="/fav.ico")
    link(rel="mask-icon" href="/fav-mask.svg" color="#ffffff")
    link(crossorigin="use-credentials" rel="manifest" href="/webmanifest.json")

    link(href="main.css" rel="stylesheet")

    meta(name="msapplication-TileColor" content="#da532c")
    meta(name="theme-color" content="#ffffff")
    <meta name="robots" content="all">

    meta(proprety="og:type" content="website")
    meta(proprety="og:title" content=meta.data.title)
    meta(proprety="og:description" content=meta.data.description)
    meta(proprety="og:image" content=meta.data.image ? meta.data.image.url : '')

    meta(name="twitter:card" content="summary_large_imge")
    meta(name="twitter:title" content=meta.data.title)
    meta(name="twitter:description" content=meta.data.description)
    meta(name="twitter:image" content=meta.data.image ? meta.data.image.url : '')


  body
    include ./partials/preloader
    include ./partials/navigation

    .content#content(data-template=template)
      block content

    script.
      window.ASSETS = !{JSON.stringify(assets).replace(/<\//g, "<\\/")}

    script(src="main.js")
