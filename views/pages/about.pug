extends ../base.pug

block variables
  - var template = 'about'

block content
  .about
    .about__wrapper
      .about__title=about.data.title

      .about__infos
        p.about__infos__category=about.data.infos_category
        each row in about.data.infos
          .about__infos__row
            p.about__infos__row__title=row.infos_title
            p.about__infos__row__text=row.infos_text

      .about__contact
        p.about__contact__category=about.data.contact_category
        .about__contact__list
          each link in about.data.contact
            a.about__contact__list__link(href=link.contact_link.url target="_blank")=link.contact_title
